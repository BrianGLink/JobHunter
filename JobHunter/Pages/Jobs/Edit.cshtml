@page
@model JobHunter.Pages.Jobs.EditModel

@{
    ViewData["Title"] = "Edit";
}
<link href="https://cdn.jsdelivr.net/npm/tom-select@2.3.0/dist/css/tom-select.bootstrap5.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/tom-select@2.3.0/dist/js/tom-select.complete.min.js"></script>

<h1>Edit</h1>

<h4>Job</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Job.JobID" />

            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Job.PositionTitle" class="control-label"></label>
                <input asp-for="Job.PositionTitle" class="form-control" />
                <span asp-validation-for="Job.PositionTitle" class="text-danger"></span>
            </div>

            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Job.Requirements" class="control-label"></label>
                <textarea asp-for="Job.Requirements" class="form-control" rows="6"></textarea>
                <span asp-validation-for="Job.Requirements" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Job.PostedDate" class="control-label"></label>
                <input asp-for="Job.PostedDate" class="form-control" />
                <span asp-validation-for="Job.PostedDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Job.AppliedDate" class="control-label"></label>
                <input asp-for="Job.AppliedDate" class="form-control" />
                <span asp-validation-for="Job.AppliedDate" class="text-danger"></span>
            </div>

            <!-- Select existing company -->
            <div class="form-group">
                <label asp-for="Job.CompanyID">Select Existing Company:</label>
                <select asp-for="Job.CompanyID" asp-items="Model.CompanyOptions" class="form-select">
                    <option value="">-- Select a company --</option>
                </select>
            </div>

            <!-- Or add a new company -->
            <div class="form-group">
                <label for="NewCompanyName">Or Add New Company:</label>
                <input asp-for="NewCompanyName" class="form-control" />
            </div>

            <!-- Select existing contact -->
            <div class="form-group">
                <label asp-for="Job.ContactID">Select Existing Contact:</label>
                <select asp-for="Job.ContactID" asp-items="Model.ContactOptions" class="form-select">
                    <option value="">-- Select a contact --</option>
                </select>
            </div>

            <!-- Or add a new contact -->
            <div class="form-group">
                <label for="NewContactName">Or Add New Contact:</label>
                <input asp-for="NewContactName" class="form-control" />
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>

    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        new TomSelect('#company-select', {
            create: true,
            sortField: {
                field: "text",
                direction: "asc"
            }
        });

         new TomSelect('#contact-select', {
            create: true,
            sortField: { field: "text", direction: "asc" }
        });
    </script>
}
